using System.Windows.Forms;
using System;

def CreateForm()
{
	def form = Form();
	form.Text = "565 Dithering demo";
	form;
}

def Run()
{
	Application.EnableVisualStyles();
	Application.Run(CreateForm());
}

def mainThread = Thread(ThreadStart(Run));
